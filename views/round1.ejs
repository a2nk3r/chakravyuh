<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ./head %>
    <link rel="stylesheet" href="/css/flipclock.css" />
    <script src="/scripts/flipclock.js"></script>
    <style>
      body {
        background-color: darkkhaki;
      }
    </style>
  </head>
  <body>
    <header><%- include ./header %></header>
    <div class="container-fluid">
      <div class="jumbotron row">
        <% if (root) { %>
        <div class="col">
          <h1>
            Round <br />
            name <br />
            to be <br />
            displayed <br />
            here...
          </h1>
        </div>
        <div class="col">
          <img src="https://picsum.photos/400?random" alt="" />
        </div>

        <div class="col">
          <h3>Rules</h3>
          <ul>
            <li>Rule1</li>
            <li>Rule2</li>
            <li>Rule3</li>
          </ul>
        </div>

        <% } else { %>
        <div class="col">
          <div class="clock" style="margin:2em;"></div>
          <div class="message"></div>
          <script type="text/javascript">
            var clock;
            const duration = 20;
            $(document).ready(function() {
              clock = $(".clock").FlipClock(duration, {
                clockFace: "MinuteCounter",
                countdown: true,
                callbacks: {
                  stop: function() {
                    $(".message").html("The clock has stopped!");
                  }
                }
              });
            });
            // setTimeout(() => {
            //   // after 2 seconds
            //   window.location = "/";
            // }, (duration + 1) * 1000);
          </script>
        </div>
        <div class="col-sm-8" style="height:500px">
          <p>
            <%= ques[0].question %>
          </p>
        </div>
        <% } %>
      </div>
    </div>
    <footer><%- include ./footer %></footer>
  </body>
</html>
