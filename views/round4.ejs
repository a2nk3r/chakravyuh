<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ./head %>
    <link rel="stylesheet" href="/css/flipclock.css" />
    <script src="/scripts/flipclock.js"></script>
    <style>
      body {
        background-color: darkkhaki;
      }
      img {
        max-width: 100%;
        max-height: auto;
      }
    </style>
  </head>
  <body>
    <header><%- include ./header %></header>
    <audio id="myAudio">
      <source src="/audio/buzzer.mp3" type="audio/mpeg" />
    </audio>
    <div class="container-fluid">
      <% if (root) { %>
      <div class="jumbotron row" style="margin-top:5%">
        <div class="col-sm" style="border-right: 1px solid #ccc">
          <h1 class="hindi">
            दुर्घटना<br />
            से<br />
            देर<br />
            भली <br />
          </h1>
        </div>
        <div class="col-sm" style="border-right: 1px solid #ccc">
          <img src="/img/durghatna.jpg" alt="" />
        </div>

        <div class="col-sm">
          <h3>Rules</h3>
          <ul>
            <li>Rule1</li>
            <li>Rule2</li>
            <li>Rule3</li>
          </ul>
          <a href="/round/4/ques">
            <img src="/img/start.svg" alt="" height="120px" width="auto" />
          </a>
        </div>
      </div>
      <% } else { %>
      <div class="jumbotron row">
        <div class="col-md-8" style="height:500px;border-right: 1px solid #ccc">
          <% if(timeroff == 1) { %>
          <img src="/img/over.png" alt="" />
          <% } else { %>
          <p>
            <%= question %>
          </p>
          <% }%>
        </div>

        <div class="col-md-4">
          <div class="clock" style="margin-top:20%;"></div>
          <div class="message"></div>
          <script type="text/javascript">
            var clock;
            var x = document.getElementById("myAudio");
            let timeroff = `<%= timeroff %>`;
            console.log(timeroff);
            const duration = 300;
            if (timeroff == 1) {
              duration = 0;
            } else {
              console.log("duration", duration);
              $(document).ready(function() {
                clock = $(".clock").FlipClock(duration, {
                  clockFace: "MinuteCounter",
                  countdown: true,
                  callbacks: {
                    stop: function() {
                      $(".message").html("The clock has stopped!");
                    },
                    interval: function() {
                      var time = this.factory.getTime().time;
                      if (
                        time === 3 ||
                        (time !== 0 && time !== 300 && time % 60 === 0)
                      ) {
                        playAudio();
                        console.log("time = ", time);
                      }
                    }
                  }
                });
              });
              window.setInterval(() => {
                window.location.href = `/round/4`;
              }, (duration + 1) * 1000);
            }
            function playAudio() {
              x.play();
            }
            function pauseAudio() {
              x.pause();
            }
          </script>
        </div>
      </div>
      <% } %>
    </div>
    <footer><%- include ./footer %></footer>
  </body>
</html>
